<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/post_photo"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Job"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/colorAccent"
                android:textColor="#FFFFFF"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senior Frontend Developer"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/job_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INNOVISION"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/home_left"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District 1, HCMC"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/loc_left"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#444444"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/job_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In to view"
                    android:textSize="15sp"
                    android:drawableLeft="@mipmap/doller_left"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/job_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days left"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:layout_alignParentRight="true"
                    android:textColor="#444444"/>
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



