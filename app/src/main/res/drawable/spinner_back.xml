<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape>

        <stroke
            android:width="1dp"
            android:color="#AAAAAA" />

        <corners
            android:radius="3dp"/>
        <solid android:color="#ffffff"/>

        <padding
            android:bottom="10dp"
            android:left="5dp"
            android:right="10dp"
            android:top="10dp" />
    </shape>
</item>
<item>
    <bitmap
        android:gravity="end"
        android:src="@mipmap/down" />
</item>

</layer-list>